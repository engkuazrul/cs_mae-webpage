main.ssl-customer-landing-wrapper
	overflow-x hidden
	// === intro ==== //
	section.intro-section
		position relative
		padding 35px 0 45px
		background #FFDE00
		+from-width($tablet_breakpoint)
			padding 60px 0 90px
		+from-width($desktop_breakpoint)
			padding 90px 0 110px
			
		background url('../images/bg-top-banner.png') no-repeat #ffde01
		background-size cover
		background-position center center

		.visual-banner
			z-index 2
			position relative
			
		.headline
			display flex
			align-items center
			justify-content center
			position relative
			z-index 2
			h2
				+below($desktop_breakpoint)
					font-size 18px
					line-height 28px
			
		.period-box	
			position relative
			z-index 2	
			p
				+below($desktop_breakpoint)
					font-size 20px
					line-height 28px

	// ==== scan pay section ==== //
	section.scan-pay
		padding 60px 0
		background $yellow
		border-bottom-left-radius 40px
		border-bottom-right-radius 40px
		overflow hidden
		+from-width($desktop_breakpoint)
			border-bottom-left-radius 120px
			border-bottom-right-radius 120px
			padding 100px 0 50px
			
		.content-wrapper
			position relative
			
		.star
			position absolute
			max-width 60px
			+from-width($default_breakpoint)
				max-width 100px
			&.left
				left 0px
				top 180px
				+from-width($tablet_breakpoint)
					left -40px
				+from-width($default_breakpoint)
					left -100px
					top 150px
				
			&.right
				bottom -10px
				right 0px
				+from-width($tablet_breakpoint)
					bottom -50px
					right -30px
				+from-width($default_breakpoint)
					right -100px

		ul.carousel-scan-pay
			list-style none
			margin 30px auto 0
			padding 0
			justify-content space-between
			display block
			+from-width($desktop_breakpoint)
				display flex
				margin 60px auto
			.card
				flex 0 1 27%
				background $base
				border-radius 40px
				margin-bottom 40px
				text-align center
				padding 10px 20px 30px
				+below($desktop_breakpoint)
					//max-width 300px
					margin 0 10px
					padding-bottom 60px
					min-height 320px
				+below(600px)
					padding 10px 20px 20px
				
				.visual
					margin 0 auto
					max-width 260px
					+from-width($tablet_breakpoint)
						max-width 230px
						
					img
						margin 0 auto
						
				p
					padding 0
					margin 0
					font-size 14px
					line-height 20px
					+from-width($tablet_breakpoint)
						font-size 16px
						padding 0 20px
						
		.slick-dots
			margin 20px 0 0
						
		
	// === guideline scan pay === //	
	section.guideline-scan-pay
		padding 50px 0 0
		position relative
		+from-width($desktop_breakpoint)
			padding 100px 0 0
		
		.coin
			max-width 90px
			width 100%
			position absolute
			+from-width($desktop_breakpoint)
				max-width 150px
			+from-width($default_breakpoint)
				max-width 200px

			&.left
				top 50%
				left -10px
				+from-width($desktop_breakpoint)
					left calc(50% - 620px)
					top 120px
				+from-width($default_breakpoint)
					left calc(50% - 670px)
					top 70px
				+below($desktop_breakpoint)
					z-index 2
				
			&.right
				bottom -50px
				right 0
				+from-width($desktop_breakpoint)
					right calc(50% - 630px)
				+from-width($default_breakpoint)
					right calc(50% - 680px)
				+below($desktop_breakpoint)
					z-index 2
				
		.headline
			p
				margin 10px auto 0
				+from-width($desktop_breakpoint)
					font-size 20px
					line-height 28px
					
		.step-container
			background $orange
			border-radius 25px
			color $global_white
			padding 0px 20px 90px
			margin 30px 0
			position relative
			z-index 1
			+from-width($desktop_breakpoint)
				border-radius 80px
				padding 0 40px 30px 60px
								
			.tab--wrapper
				position relative
				padding-top 30px
				padding-bottom 14px
				text-align center
				+from-width($desktop_breakpoint)
					padding-top 100px
					padding-bottom 0
					padding-left calc(50% - 110px)
					text-align left
				
			.tabs-for-step
				+below(370px)
					margin-right 20px
					
