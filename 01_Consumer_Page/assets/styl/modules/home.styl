						max-width 370px
						margin-top 15px
					+below($desktop_breakpoint)
						min-width 370px!important
					+below(500px)
						min-width 300px!important
						
						
					p
						margin 20px 0 10px
						text-align center
						+from-width($desktop_breakpoint)
							margin 20px 0 0
						
					img
						+below($desktop_breakpoint)
							margin 0 auto
						//+below(500px)
							//margin 0
							//width 100%
								
				.slick-track,
				.slick-list
					+from-width($desktop_breakpoint)
						max-height 570px
					+below($desktop_breakpoint)
						min-width 300px
						min-height 650px
						max-height 650px
						transform none
						margin 0 auto

			// nav	
			ol
				list-style-type none
				padding 0
				margin 0
				max-width 550px
				width 100%
				+below($desktop_breakpoint)
					margin 0 auto
					width 250px
				li
					color #000
					border-radius 34px
					position relative
					counter-increment custom
					box-sizing border-box
					width 50px!important
					margin 0 20px
					+from-width($desktop_breakpoint)
						width 500px!important
						max-width 500px
						display flex
						align-items center
						max-height 68px
						margin 0 0 40px
						padding 8px 15px

					&.slick-current
						+from-width($desktop_breakpoint)
							background $base
						&:before
							background $yellow
							color $black
							border 4px solid $global_white
						p
							color $black
								
					
					&:first-child
						counter-reset custom
						
						
					&:last-child
						&:after
							display none
						
					&:before
						content counter(custom) " " 
						border-radius 50%
						background $base
						color $dark_yellow
						font-weight 700
						margin-right 25px
						padding 14px 20px
						text-align center
						+below($desktop_breakpoint)
							display block
							width 43px
							padding 10px 0
							
					&:after
						content ""
						height 27px
						background $global_white
						width 1px
						display block
						position absolute
						right -30px
						top 50%
						+from-width($desktop_breakpoint)
							bottom -35px
							left 40px
							right unset
							top unset
						
						+below($desktop_breakpoint)
							width 20px
							height 1px
						
					p
						margin 0
						display none
						vertical-align middle
						color $global_white
						+from-width($desktop_breakpoint)
							display inline-block
				
				.slick-track,
				.slick-list
					display flex
					+from-width($desktop_breakpoint)
						flex-direction column	
						
					+below($desktop_breakpoint)
						align-items center
						min-height 100%!important
							
						

