			.tab-switch
				position relative
				&:after
					content ""	
					position absolute
					width 50%
					top 0
					transition left cubic-bezier(.88, -.35, .565, 1.35) .4s
					border-radius 25px
					box-shadow 0px 2px 3px rgba(0, 0, 0, 0.15)
					background-color $yellow
					height 100%
					z-index 0
				&.left
					&:after
						left 0
						
				&.right
					&:after
						left 50%
						
				.tab
					display inline-block
					width 49%
					padding 10px 0
					z-index 1
					position relative
					cursor pointer
					transition color 200ms
					user-select none
					text-align center
					font-weight 700
					color $dark_yellow
					
					&.active
						color $black
						
			.tab-navi-wrapper
				border-radius 30px
				background-color $global_white
				max-width 240px
				margin 30px auto
				width 100%
				+from-width($desktop_breakpoint)
					margin 30px 0
					
				
			// visual	
			.carousel-for,
			.carousel-for-receive
				max-width 370px
				max-height 570px
				width 100%
				+from-width($desktop_breakpoint)
					margin-top -25%
				+below($desktop_breakpoint)
					margin 0 auto
					order 2
				+below(370px)
					margin 0 auto 0 -7px
				.visual
					+from-width($desktop_breakpoint)
