$button_size = 56px

.slick-slider
	.slick-slide
		outline none !important
	.slick-next, .slick-prev
		z-index 10
		top 50%
		border-radius 100%
		background-color $ssl_yellow
		box-shadow 0px 2px 5px rgba(0, 0, 0, 0.4)
		transform translateY(-50%)
			
	.slick-next
		width $button_size
		height $button_size
		right 0
		+from-width($desktop_breakpoint)
			right 33.8%
		&:before
			content ""
			background url('../images/arrow.svg') no-repeat center
			transform rotate(180deg)
			display block
			width 100%
			height 100%
	.slick-prev
		z-index 2
		width $button_size
		height $button_size
		left 0
		+from-width($desktop_breakpoint)
			left 33.8%
		&:before
			content ""
			background url('../images/arrow.svg') no-repeat center
			display block
			width 100%
			height 100%
	
	.slick-dots
		position relative
		bottom 0
		
		ul
			padding-left 0!important
		li
			width 7px
			margin 0 7px
			display inline-block!important
			button
				&:before
					content ''
					width 9px
					height 9px
					border-radius 50%
					background transparent
					border 2px solid $global_white
					opacity 1
					
			&.slick-active
				button
					&:before
						background $global_white

.cross-sell-slider
	.slick-next, .slick-prev
		bottom unset
		top 50%
	.slick-next
		+from-width($tablet_breakpoint)
			right 12px
	.slick-prev
		+from-width($tablet_breakpoint)
			left 12px