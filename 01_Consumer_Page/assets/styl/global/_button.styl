
.switch
    position relative
    display inline-block
    width 100%
    height 60px
    z-index 3
    
    input
        opacity 0
        width 0
        height 0
    
    .slider-switch
        position absolute
        cursor pointer
        top 0
        left 0
        right 0
        bottom 0
        width 100%
        height 50px
        -webkit-transition: .4s
        transition .4s
        
        &:before 
            position absolute
            content ""
            height 100%
            width 50%
            background-color $yellow
            transition .4s
    .round        
        &:before
            border-radius 25px
            box-shadow 0px 2px 3px rgba(0, 0, 0, 0.15)
            
    .switch-text-box
        pointer-events none
        position relative
        display flex
        justify-content space-between
        width 100%
        padding-top 15px
        font-weight 700
        
        label
            width 50%
            text-align center
            
        .on
            position relative
            justify-content center
            color $black
            transition .4s
        .off
            position relative
            color $dark_yellow
            transition .4s
    
    input:checked + .slider-switch:before
        transform translateX(100%)
    
    input:checked + .slider-switch
        .on
            color $dark_yellow
            transition .4s
        .off
            color $black
            transition .4s
